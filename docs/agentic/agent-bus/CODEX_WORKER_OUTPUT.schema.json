{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Worker Output",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "outcome",
    "note",
    "commitSha",
    "planMarkdown",
    "filesToChange",
    "testsToRun",
    "artifacts",
    "riskNotes",
    "rollbackPlan",
    "qualityReview",
    "followUps",
    "review"
  ],
  "properties": {
    "outcome": {
      "type": "string",
      "enum": [
        "done",
        "needs_review",
        "blocked",
        "failed",
        "skipped"
      ]
    },
    "note": {
      "type": "string",
      "description": "Short human-readable summary for the receipt.",
      "maxLength": 4000
    },
    "commitSha": {
      "type": "string",
      "description": "Git commit SHA if changes were committed (EXECUTE tasks).",
      "maxLength": 100
    },
    "planMarkdown": {
      "type": "string",
      "description": "For PLAN_REQUEST tasks, a structured plan in Markdown."
    },
    "filesToChange": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "testsToRun": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "riskNotes": {
      "type": "string"
    },
    "rollbackPlan": {
      "type": "string"
    },
    "qualityReview": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "required": [
        "summary",
        "legacyDebtWarnings",
        "hardRuleChecks"
      ],
      "properties": {
        "summary": {
          "type": "string",
          "maxLength": 280
        },
        "legacyDebtWarnings": {
          "type": "integer",
          "minimum": 0
        },
        "hardRuleChecks": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "codeVolume",
            "noDuplication",
            "shortestPath",
            "cleanup",
            "anticipateConsequences",
            "simplicity"
          ],
          "properties": {
            "codeVolume": {
              "type": "string",
              "maxLength": 200
            },
            "noDuplication": {
              "type": "string",
              "maxLength": 200
            },
            "shortestPath": {
              "type": "string",
              "maxLength": 200
            },
            "cleanup": {
              "type": "string",
              "maxLength": 200
            },
            "anticipateConsequences": {
              "type": "string",
              "maxLength": 200
            },
            "simplicity": {
              "type": "string",
              "maxLength": 200
            }
          }
        }
      }
    },
    "autopilotControl": {
      "type": [
        "object",
        "null"
      ],
      "additionalProperties": false,
      "properties": {
        "executionMode": {
          "type": "string",
          "enum": [
            "delegate",
            "tiny_fixup"
          ]
        },
        "tinyFixJustification": {
          "type": "string",
          "maxLength": 400
        },
        "workstream": {
          "type": "string",
          "maxLength": 120
        },
        "branchDecision": {
          "type": "string",
          "enum": [
            "reuse",
            "rotate",
            "close"
          ]
        },
        "branchDecisionReason": {
          "type": "string",
          "maxLength": 400
        }
      }
    },
    "followUps": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "to",
          "title",
          "body",
          "signals",
          "references"
        ],
        "properties": {
          "to": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "title": {
            "type": "string"
          },
          "body": {
            "type": "string"
          },
          "signals": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "kind",
              "phase",
              "rootId",
              "parentId",
              "smoke"
            ],
            "properties": {
              "kind": { "type": "string" },
              "phase": { "type": "string" },
              "rootId": { "type": "string" },
              "parentId": { "type": "string" },
              "smoke": { "type": "boolean" }
            }
          },
          "references": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "git",
              "integration"
            ],
            "properties": {
              "git": {
                "type": ["object", "null"],
                "additionalProperties": false,
                "required": [
                  "baseSha",
                  "workBranch",
                  "integrationBranch"
                ],
                "properties": {
                  "baseSha": { "type": "string" },
                  "workBranch": { "type": "string" },
                  "integrationBranch": { "type": "string" }
                }
              },
              "integration": {
                "type": ["object", "null"],
                "additionalProperties": false,
                "required": [
                  "requiredIntegrationBranch",
                  "integrationMode"
                ],
                "properties": {
                  "requiredIntegrationBranch": { "type": "string" },
                  "integrationMode": { "type": "string" }
                }
              }
            }
          }
        }
      }
    },
    "review": {
      "type": ["object", "null"],
      "additionalProperties": false,
      "required": [
        "ran",
        "method",
        "targetCommitSha",
        "scope",
        "reviewedCommits",
        "summary",
        "findingsCount",
        "verdict",
        "evidence"
      ],
      "properties": {
        "ran": { "type": "boolean" },
        "method": { "type": "string", "enum": ["built_in_review"] },
        "targetCommitSha": { "type": "string" },
        "scope": { "type": "string", "enum": ["commit", "pr"] },
        "reviewedCommits": {
          "type": "array",
          "items": { "type": "string" }
        },
        "summary": { "type": "string" },
        "findingsCount": { "type": "integer", "minimum": 0 },
        "verdict": { "type": "string", "enum": ["pass", "changes_requested"] },
        "evidence": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "artifactPath",
            "sectionsPresent"
          ],
          "properties": {
            "artifactPath": { "type": "string" },
            "sectionsPresent": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        }
      }
    },
    "runtimeGuard": {
      "type": ["object", "null"],
      "additionalProperties": true,
      "properties": {
        "skillProfile": { "type": "string", "maxLength": 120 },
        "skillsSelected": {
          "type": "array",
          "items": { "type": "string" },
          "maxItems": 32
        },
        "skillsSelectedTotal": { "type": "integer", "minimum": 0 },
        "execSkillSelected": { "type": "boolean" },
        "sessionScope": { "type": "string", "enum": ["task", "root"] },
        "sessionRotated": { "type": "boolean" },
        "sessionRotationReason": { "type": ["string", "null"], "maxLength": 120 },
        "branchContinuityGate": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "status": { "type": "string", "enum": ["pass", "blocked"] },
            "errors": {
              "type": "array",
              "items": { "type": "string" }
            },
            "reasonCode": { "type": ["string", "null"] },
            "applied": {
              "type": "array",
              "items": {
                "type": "object",
                "additionalProperties": true
              }
            }
          }
        },
        "engineModeGate": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "requiredMode",
            "effectiveMode",
            "pass"
          ],
          "properties": {
            "requiredMode": { "type": "string" },
            "effectiveMode": { "type": "string" },
            "pass": { "type": "boolean" },
            "reasonCode": { "type": ["string", "null"] }
          }
        }
      }
    }
  }
}
